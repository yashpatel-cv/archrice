#!/bin/sh

case $BLOCK_BUTTON in
	1) notify-send "ðŸ§  Memory hogs" "$(ps axch -o cmd,%mem | awk '{cmd[$1]+=$2} END {for (i in cmd) print i, cmd[i]}' | sort -nrk2 | head)" ;;
	2) setsid -f "$TERMINAL" -e htop ;;
	3) notify-send "ðŸ§  Memory" "Shows RAM usage percentage\nLeft: memory hogs\nMiddle: htop" ;;
	6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

free | awk '/^Mem/ {printf "ðŸ§ %d%%\n", $3/$2*100}'
