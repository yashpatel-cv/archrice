#!/usr/bin/env bash
# PARSS launcher convenience script
# This script is deployed via archrice into ~/.local/bin/parss
# so you can run the PARSS control panel with a single command.

set -euo pipefail

PARSS_DIR="${PARSS_DIR:-$HOME/PARSS}"

if [[ ! -d "$PARSS_DIR/scripts" ]]; then
    echo "[PARSS] Expected PARSS scripts in $PARSS_DIR/scripts but directory was not found." >&2
    echo "[PARSS] Clone PARSS to ~/PARSS or set PARSS_DIR before running this command." >&2
    exit 1
fi

exec "$PARSS_DIR/scripts/parss-menu.sh" "$@"
